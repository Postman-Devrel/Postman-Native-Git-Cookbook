  "item": [
    {
      "name": "Admin",
      "item": [
        {
          "name": "Generate API key",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Parse the JSON response",
                  "const jsonData = pm.response.json();",
                  "",
                  "// Test to verify the API key was received successfully",
                  "pm.test('API key was received successfully', function() {",
                  "    pm.expect(jsonData).to.have.property('apiKey');",
                  "    pm.expect(jsonData.apiKey).to.be.a('string');",
                  "    pm.expect(jsonData.apiKey).to.not.be.empty;",
                  "});",
                  "",
                  "// Extract the apiKey and save it to the environment variable",
                  "if (jsonData.apiKey) {",
                  "    pm.environment.set('apiKey', jsonData.apiKey);",
                  "    console.log('API key saved to environment variable: apiKey');",
                  "}"
                ]
              }
            }
          ],
          "id": "c2f6cbd4-0994-453c-8a16-f8b2adb8f602",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3000/api/v1/auth",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "3000",
              "path": [
                "api",
                "v1",
                "auth"
              ]
            },
            "description": "Generates a new API key for accessing the Intergalactic Bank API."
          },
          "response": []
        }
      ],
      "id": "15ae2bb5-f340-4f5f-b4fa-e0a89b00321e"
